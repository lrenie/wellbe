<div class="container-l navbar-home">
  <%= link_to root_path do %>
    <%= image_tag "wellbe-police-gourde-blanc.png", class: "logo" %>
  <% end %>
  <div class="flex-g-1">
    <div class="flex-b-c">
      <p class="p-l-40">Nutrition</p>
      <p class="flex-g-1 p-l-20">Blog</p>
    </div>
  </div>
  <% if signed_in? %>
    <div class="icone">
      <!-- ============================================ -->
      <%= link_to current_user, style: "text-decoration: none" do %>
        <% if current_user%>
          <div class="flex-b-c">
            <%= cl_image_tag current_user.avatar.key, width: 160, height: 160, crop: :thumb, class: "avatar-photo"%>
          </div>
        <% else %>
          <% cl_image_tag "lourd.jpg" %>
        <% end %>
      <% end %>
      <!-- ============================================ -->
      <ul class="navbar-nav icone-style home">
        <li id="belt">
          <i class="fas fa-bell"></i>
          <div class="red-notif <%= 'd-none' if @friend_requests&.count < 1 %>">
            <span id="counter"><%= @friend_requests&.count || 0 %></span>
          </div>
          <ul class="dropdown-belt notif-container">
            <%= render "shared/dropdown_notification" %>
          </ul>

        </li>
      </ul>
      <!-- ============================================ -->
      <%= link_to users_path do %>
        <div class="icone-style home">
          <i class="fas fa-user-friends"></i>
        </div>
      <% end %>
      <!-- ============================================ -->
      <%= link_to chatrooms_path do %>
        <div class="icone-style home">
          <i class="fas fa-comments"></i>
        </div>
      <% end %>
      <!-- ============================================ -->
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <div class="icone-style home", id="navbarDropdown", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false">
            <i class="fas fa-tools"></i>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "#", class: "dropdown-item flex-b-c" do %>
              <i class="fas fa-user-edit m-r-10" id="noir"></i>
              <p class="flex-g-1" id="noir">Modifier mon profil</p>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item flex-b-c" do %>
              <i class="fas fa-sign-out-alt m-r-10" id="noir"></i>
              <p class="flex-g-1" id="noir">DÃ©connexion</p>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  <% else %>
    <%= link_to "CONNEXION", new_user_session_path, class: "btn-3", id: "connexion" %>
  <% end %>
</div>
