<div id="navbar_global">
  <div class="navbar_global">
    <%= link_to root_path do %>
      <%= image_tag "wellbe-police.png", class: "logo" %>
    <% end %>
    <div class="icone">
      <!-- ============================================ -->
      <%= link_to current_user, style: "text-decoration: none" do %>
        <% if current_user.avatar.attached?%>
          <div class="flex-b-c">
            <%= cl_image_tag current_user.avatar.key,
                width: 160, height: 160, crop: :thumb,
                class: "avatar-photo",
                id: "nav-avatar"%>
          </div>
        <% else %>
            <%= image_tag "mrlarbin", alt: "mrlarbin", width: 160, height: 160, crop: :thumb, class: "avatar-photo" %>
        <% end %>
      <% end %>
      <!-- ============================================ -->
      <ul class="navbar-nav icone-style">
        <li id="belt">
          <i class="fas fa-bell"></i>
          <div class="red-notif <%= 'd-none' if @friend_requests&.count < 1 %>">
            <span id="counter"><%= @friend_requests&.count || 0 %></span>
          </div>
          <ul class="dropdown-belt notif-container">
            <%= render "shared/dropdown_notification" %>
          </ul>
        </li>
      </ul>
      <!-- ============================================ -->
      <%= link_to users_path do %>
        <div class="icone-style">
          <i class="fas fa-user-friends"></i>
        </div>
      <% end %>
      <!-- ============================================ -->
      <%= link_to chatrooms_path do %>
        <div class="icone-style">
          <i class="fas fa-comments"></i>
        </div>
      <% end %>
      <!-- ============================================ -->
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <div class="icone-style", id="navbarDropdown", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false">
            <i class="fas fa-tools"></i>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "#", class: "dropdown-item flex-b-c" do %>
              <i class="fas fa-user-edit m-r-10" id="noir"></i>
              <p class="flex-g-1">Modifier mon profil</p>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item flex-b-c" do %>
              <i class="fas fa-sign-out-alt m-r-10" id="noir"></i>
              <p class="flex-g-1">DÃ©connexion</p>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>
  <div class="trace-gradiant"></div>
</div>
